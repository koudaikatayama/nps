<%= form_with model: @post do |f| %>
  <h4>画像</h4>
  <%= f.file_field :spot_image, accept: "image/*" %>
  <h4>ジャンル</h4>
  <%= f.collection_select(:genre_id, @genres, :id, :name) %>
  <h4>スポット名</h4>
  <%= f.text_field :name %>
  <h4>住所</h4>
  <%= f.text_field :address %>
  <h4>スポット説明</h4>
  <%= f.text_area :explanation %>
  
  <div class="form-group m-5">タグ</div>

  <div class="row d-flex justify-content-start m-5">
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_type) do |tag| %>
        <div class="form-check form-check-inline flex flex-wrap">
            <%= tag.label do %>
                <%= tag.check_box %>
                <%= tag.text %>
            <% end %>
        </div>
    <% end %>
  </div>
  <%= f.submit '投稿' %>
<% end %>