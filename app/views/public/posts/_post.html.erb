 <div class='row'>
 <div class = 'py-4'>
   <div class="card ml-5 mr-3" style="max-width: 21rem;">
    <p class='pl-2 pt-2'>
      <%= link_to users_mypage_path(post.user.id) do %>
          <%= image_tag post.user.get_profile_image, style: "border-radius: 50%; width: 50px; height: 50px; object-fit:cover;" %>
          <%= post.user.name %>
      <% end %>
    </p>
    <p class='pl-2 pr-2'>
     <%= link_to post_path(post.id) do %>
      <%= image_tag post.get_spot_image, size: '312x208' %>
     <% end %>
    </p>
    <p class='pl-4'>
      <%= link_to post_path(post.id) do %>
       <%= post.name %>
      <% end %>
    </p>
    <div class='pl-2'>
        <% post.tags.each do |tag| %>
         <%= tag.tag_type %>
        <% end %>
    </div>
    <div class='pl-4 d-flex justify-content-start'>
     <p id="like_btn_<%= post.id %>"><%= render "public/likes/btn", post: post %></p>
     <p class='pl-4', id="comment_counter"><%= render "public/comments/counter", post: post %></p>
    </div>
   </div>
  </div>
 </div>