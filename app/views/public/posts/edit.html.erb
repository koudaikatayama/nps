<h1>投稿編集</h1>

<%= form_with model: @post do |f| %>
  <h4>画像</h4>
  <%= image_tag @post.get_spot_image, size: '500x300'%></br>
  <%= f.file_field :spot_image, accept: "image/*" %>
  <h4>ジャンル</h4>
  <%= f.collection_select(:genre_id, @genres, :id, :name) %>
  <h4>スポット名</h4>
  <%= f.text_field :name %>
  <h4>住所</h4>
  <%= f.text_field :address %>
  <h4>スポット説明</h4>
  <%= f.text_area :explanation %>
  <%= f.submit '投稿' %>
<% end %>
