<div class="container border border-white contents-area bg-white">
 <div class="row mt-5 mb-5">
  <div class="col-xl-10 col-lg-10 col-md-12 col-sm-12 mx-auto">
   
  <h3 class="text-center"><strong class="">ジャンル一覧・追加/削除</strong></h3>

        <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
        <table class="table table-border contents-area mt-5">
         <tr>
          <td class="align-middle">タグ名</td>
          <td class="center align-middle">
            <%= f.text_field:name,:size=>"35" %>
          </td>
          <td colspan="2"></td>
          <td>
             <%= f.submit "新規登録", class: "btn btn-primary btn-lg" %>
          </td>
         </tr>
          <% end %>
         <thead class="table-active">
            <tr>
              <th>ジャンル</th>
              <th colspan="6"></th>
            </tr>
          </thead>
          
          <tbody>
              <% @genres.each do |genre| %>
                <tr>
                  <td class="align-middle"><%= genre.name %></td>
                  <td colspan="3"></td>
                  <td>
                    <%= link_to "ジャンルを変更する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
                    <%= link_to "ジャンルを削除する", admin_genre_path(genre.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当にジャンルを削除しますか?" %>
                  </td>
                </tr>
              <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
