<div class="container border border-white contents-area bg-white">
 <div class="row mt-5">
  <div class="col-xl-10 col-lg-10 col-md-12 col-sm-12 mx-auto">
      
    <h3 class="table-active text-center"><strong class="">投稿詳細</strong></h3>
    
  </div>
 </div>
</div>

<div class="container border border-white contents-area bg-white">
 <div class="row">

  <div class='col-sm-12'>
     <%= link_to users_mypage_path(@post.user) do %>
      <%= image_tag @post.user.get_profile_image, style: "border-radius: 50%; width: 50px; height: 50px; object-fit:cover;" %>
      <%= @post.user.name %>
     <% end %>
  </div>

  <div class='col-sm-12 col-lg-5 pt-3'>
   <%= image_tag @post.get_spot_image, size: '510x340'%>
   投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %>
  </div>

  <div class ='col-sm-12 col-lg-5 offset-md-1 pt-3'>
   <div>
    <h2 class='font-weight-bold border-bottom border-dark'><%= @post.name %></h2>
   </div>
   <p class='font-weight-bold pt-3'><%= @post.explanation %></strong></p>

   <div class='mt-4 border-top border-secondary'>
      ジャンル : <%= @post.genre.name %>

      <% @post.tags.each do |tag| %>
       <%= tag.tag_type %>
      <% end %>
   </div>
   
    <div class="d-flex flex-row bd-highlight mt-4">
      <div class='ml-3', id="comment_counter"><%= render "public/comments/counter", post: @post %></div>
    </div>
    
  </div>
  
  <div class='col-sm-12 col-lg-4 pt-3 pb-2'>
    <div><%= render "public/posts/map", post: @post %></div>
    <div><%= @post.address %></div>
  </div>
  
  <div class='col-sm-12 col-lg-6 offset-md-1 pt-5 pb-2'>
    <div class='mt-3' id="comment_index">
 <table>
  <tbody>
    <% @post.comments.each do |comment| %>
    <tr>
      <td>
        <%= link_to admin_user_path(comment.user) do %>
          <%= image_tag comment.user.get_profile_image, style: "border-radius: 50%; width: 50px; height: 50px; object-fit:cover;" %><br>
          <%= comment.user.name %>
        <% end %>
      </td>
      <td><%= comment.comment %></td>
      <td>
          <%= link_to "Destroy", post_comment_path(@post, comment), method: :delete, class: "btn btn-sm btn-danger float-end", remote: true, data: {"turbolinks" => false} %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
 <!--<%= link_to 'Destroy', @comment, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>-->
</div>
  </div>
 </div>
</div>